<h1>Facilities</h1>
 <%= form_tag facilities_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %><br/>
        <%= submit_tag "search", :name => nil %><br/>
      </p>
<% end %>

<%= link_to 'New Facility', new_facility_path %>
<p>
  Download:
 <%= link_to "CSV", facilities_path(:params => params, format: "csv") %>
  <%= link_to "Excel", facilities_path(:params => params, format: "xls") %>
</p>

<p> <%= @facilities.count %> Records Found </p>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Address</th>
	<th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @facilities.each do |facility| %>
  <tr>
    <td><%= facility.name %></td>
    <td><%= facility.address %></td>
	<td><%= facility.status %></td>
    <td><%= link_to 'Show', facility %></td>
    <td><%= link_to 'Edit', edit_facility_path(facility) %></td>
    <td><%= link_to 'Remove', facility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td><%= link_to 'Approve', approve_facility_path(facility)%></td>
  </tr>
<% end %>
</table>

<br />
