<h1>Listing events</h1>
<%= form_tag events_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %><br/>
        <%= submit_tag "search", :name => nil %><br/>
      </p>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Program</th>
    <th>Eventtype</th>
    <th>Facility</th>
    <th>Duration</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.program.name %></td>
    <td><%= event.eventtype.name %></td>
    <td><%= event.facility.name %></td>
    <td><%= event.duration %></td>
    <td><%= event.date %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_event_path %>
<p>
  Download:
  <%= link_to "CSV", events_path(format: "csv") %> |
  <%= link_to "Excel", events_path(format: "xls") %>
</p>

<p>
  Download:
 <%= link_to "CSV", events_path(:params => params, format: "csv") %>
  <%= link_to "Excel", events_path(:params => params, format: "xls") %>
</p>
