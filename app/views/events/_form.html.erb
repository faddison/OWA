  <div class="field">
	<%= f.label "Facility" %><br />
  	<%= collection_select(:Event , :facility_id, Facility.all , :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_field :notes %>
  </div>
