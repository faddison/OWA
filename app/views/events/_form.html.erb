<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
	<%= f.label "Facility" %>
  	<%= collection_select(:event , :facility_id, Facility.all , :id, :name) %>
  </div>
  <div class="field">
	<%= f.label "Program" %>
  	<%= collection_select(:event , :program_id, Program.all , :id, :name) %>
  </div>
  <div class="field">
	<%= f.label "Event Type" %>
  	<%= collection_select(:event , :eventtype_id, Eventtype.all , :id, :name) %>
  </div>
  
  
  <div class="field">
    <%= f.label "Duration (hrs)" %>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
