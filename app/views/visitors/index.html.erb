<h1>Listing visitors</h1>

 <%= form_tag visitors_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %><br/>
        <%= submit_tag "visitors first name", :name => nil %><br/>
      </p>
<% end %>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Language</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @visitors.each do |visitor| %>
  <tr>
    <td><%= visitor.fname %></td>
    <td><%= visitor.lname %></td>
    <td><%= visitor.language %></td>
    <td><%= visitor.email %></td>
    <td><%= visitor.phone %></td>
    <td><%= link_to 'Show', visitor %></td>
    <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
    <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Visitor', new_visitor_path %>
<p>
  Download:
  <%= link_to "CSV", visitors_path(format: "csv") %> |
  <%= link_to "Excel", visitors_path(format: "xls") %>
</p>
